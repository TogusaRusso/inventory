      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% people_array = Person.all.map { |person| [person.name, person.id] } %>
  <% people_array.unshift(['Нет', 0]) %>
  
  
  <div class="field">
    <%= f.label "Выдал: " %><br>
    <%= f.select :person_from, options_for_select(people_array) %>
  </div>
  <div class="field">
    <%= f.label "Получил: " %><br>
    <%= f.select :person_to, options_for_select(people_array) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

